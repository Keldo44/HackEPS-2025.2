{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    "target": "ES2020",           // Supports async/await, Promise
    "module": "ESNext",
    "lib": ["DOM", "ES2020"],     // Includes Map, Promise, fetch, etc.
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,          // Skip checking @mediapipe types if needed
    "forceConsistentCasingInFileNames": true
